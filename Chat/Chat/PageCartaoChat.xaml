<Page x:Class="Chat.PageCartaoChat"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chat"
      mc:Ignorable="d" 
      d:DesignHeight="60" d:DesignWidth="350"
      Title="PageCartaoChat">

    <Grid x:Name="gridCartao" Background="White" MouseLeftButtonUp="gridCartao_MouseLeftButtonUp">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "Auto"/>
            <ColumnDefinition Width = "*"/>
        </Grid.ColumnDefinitions>
        <Ellipse x:Name="foto"   Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Height="45" Width="45" Stretch="Fill" Margin="5" Stroke="#37376E"/>
        <TextBlock x:Name="textNome" Grid.Column="1" VerticalAlignment="Center" Margin="5" Text="Nome do amigo" FontSize="16" FontWeight="Bold" TextWrapping="Wrap"/>
    </Grid>
</Page>
